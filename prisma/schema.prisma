model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  credits  Int       @default(10)
}

model Session {
  id              String   @id @default(cuid())
  sessionId       String
  notes           String
  conversation    Json?
  report          Json?
  selectedDoctor  Json
  createdBy       String
  createdAt       DateTime @default(now())
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
